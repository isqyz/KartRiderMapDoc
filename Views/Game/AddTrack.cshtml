@model (IEnumerable<KartRiderMapDoc.Models.Track>, KartRiderMapDoc.Models.Track)
@{
    ViewBag.Title = "添加赛道";
    Track track = @Model.Item2;
    var Tracks = @Model.Item1;
}

<style>
    body {
    font-family: "Segoe UI", sans-serif;
    padding: 20px;
    }

    h2 {
    color: #333;
    margin-bottom: 20px;
    }

    table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
    }

    table th, table td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    }

    table th {
    background-color: #f5f5f5;
    }

    a.btn {
    display: inline-block;
    padding: 6px 12px;
    margin: 2px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 13px;
    }

    .btn-primary {
    background-color: #007acc;
    color: white;
    }

    .btn-danger {
    background-color: #cc3300;
    color: white;
    }

    form {
    max-width: 500px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fafafa;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
    margin-bottom: 20px;
    }

    .form-group {
    margin-bottom: 15px;
    }

    label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
    width: 100%;
    padding: 8px 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }

    .text-danger {
    color: red;
    font-size: 12px;
    }

    button {
    padding: 8px 16px;
    background-color: #007acc;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }

    button:hover {
    background-color: #005fa3;
    }

    a {
    color: #007acc;
    }

    a:hover {
    text-decoration: underline;
    }
</style>

<h2>@ViewData["Title"]</h2>

<table>
    <thead>
        <tr>
            <th>赛道名称</th>
            <th>赛道等级</th>
            <th>星级</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Tracks)
        {
            <tr>
                <td>@t.TrackName</td>
                <td>@t.Lev</td>
                <td>@t.Star</td>
                <td>
                    <a href="@Url.Action("Edit", "Track", new { id = t.Id })" class="btn btn-primary">编辑</a>
                    <a href="@Url.Action("Delete", "Track", new { id = t.Id })" class="btn btn-danger">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-action="AddTrack">
    <div class="form-group">
        <label asp-for="@track.TrackName"></label>
        <input asp-for="@track.TrackName" />
        <span asp-validation-for="@track.TrackName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@track.Lev"></label>
        <input asp-for="@track.Lev" />
        <span asp-validation-for="@track.Lev" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@track.Star"></label>
        <input asp-for="@track.Star" type="number" />
        <span asp-validation-for="@track.Star" class="text-danger"></span>
    </div>

    <button type="submit">提交</button>
</form>

<div>
    <a href="@Url.Action("Index", "Track")">返回赛道列表</a>
</div>

@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}