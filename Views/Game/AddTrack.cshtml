    max-width: 800px;
    border-radius: 8px;
    background-color: #fafafa;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
    margin-bottom: 20px;
    }

    .form-group {
    margin-bottom: 15px;
    padding: 20px;
    border: 1px solid #ddd;
    }

    label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
    width: 100%;
    padding: 8px 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }

    .text-danger {
    color: red;
    font-size: 12px;
    }

    button {
    padding: 8px 16px;
    background-color: #007acc;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }

    button:hover {
    background-color: #005fa3;
    }

    a {
    color: #007acc;
    }

    a:hover {
    text-decoration: underline;
    }
</style>

<h2>@ViewData["Title"]</h2>

<table>
    <thead>
        <tr>
            <th>赛道名称</th>
            <th>赛道等级</th>
            <th>星级</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Tracks)
        {
            <tr>
                <td>@t.TrackName</td>
                <td>@t.Lev</td>
                <td>@t.Star</td>
                <td>
                    <form action="@Url.Action("EditTrack", "Game")" method="post" class="my-form-style" style="display:inline;">
                        <input type="hidden" name="id" value="@t.Id" />
                        <button type="submit" class="btn btn-primary">编辑</button>
                    </form>

                    <form action="@Url.Action("DelTrack", "Game")" method="post" class="my-form-style" style="display:inline;" onsubmit="return confirm('确定删除吗？');">
                        <input type="hidden" name="id" value="@t.Id" />
                        <button type="submit" class="btn btn-danger">删除</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-action="AddTrack" class=".form-group">
    <div style="display: flex; align-items: flex-start; gap: 2rem;">
        <!-- 左侧：原始表单 -->
        <div style="flex: 1;padding-right:3%">
            <div class="form-group">
                <label asp-for="@track.TrackName"></label>
                <input asp-for="@track.TrackName" class="form-control" />
                <span asp-validation-for="@track.TrackName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@track.Lev"></label>
                <input asp-for="@track.Lev" class="form-control" />
                <span asp-validation-for="@track.Lev" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@track.Star"></label>
                <input asp-for="@track.Star" class="form-control" type="number" min="0" max="5" />
                <span asp-validation-for="@track.Star" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <table>
                @foreach (var item in track.ReadGradeLevel())
                {
                    <tr class="form-group">
                        <td><label for="ScoreLev">@item.Key</label></td>
                        <td>
                            <input class="form-control score-input" type="text" id="@item.Key" name="GradeLevelEntries[0]" placeholder="mm:ss:SSS" maxlength="8" @(item.Value != 0 ? $"value=\"{item.Value}\"" : "") />
                        </td>
                    </tr>
                }
            </table>
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
    </div>
</form>

