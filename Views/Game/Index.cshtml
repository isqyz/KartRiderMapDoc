else
{
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>玩家名</th>
                <th>赛道</th>
                <th>成绩</th>
                <th>等级</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model.PlayerScores)
            {
                <tr>
                    <td>@player.PlayerName</td>
                    <td>@player.TrackName</td>
                    <td>@player.Score</td>
                    <td>@player.Level</td>
                </tr>
            }
        </tbody>
    </table>
}
