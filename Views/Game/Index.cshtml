@model ShowViewModel
@{
    ViewBag.Title = "玩家成绩统计";
    List<Track> tracks = Model.Tracks.ToList();

}

<h2>玩家成绩统计</h2>

<form method="get" action="@Url.Action("Index", "Game")">
    <div>
        <h4>选择赛道</h4>
        @foreach (var track in tracks)
        {
            <label>
                <input type="checkbox" name="selectedTracks" value="@track.TrackName"
                @(tracks != null && tracks.Any(val => val.TrackName.Contains(track.TrackName)) ? "checked" : "") />
                @track.TrackName
            </label>
        }
    </div>
    <button type="submit">筛选</button>
</form>
